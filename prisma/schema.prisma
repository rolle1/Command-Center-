generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum BlockMode {
  DEEP_WORK
  ADMIN
  LEARNING
  HEALTH
  SOCIAL
  RECOVERY
}

enum BlockStatus {
  PLANNED
  DONE
  SKIPPED
  MOVED
}

model Block {
  id        String      @id @default(cuid())
  title     String
  notes     String      @default("")
  startAt   DateTime
  endAt     DateTime
  timezone  String
  mode      BlockMode
  status    BlockStatus @default(PLANNED)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([startAt])
}
